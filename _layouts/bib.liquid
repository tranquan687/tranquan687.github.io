<div class="row">
  <!-- Cột hiển thị Năm (Badge màu đỏ) -->
  <div class="col-xs-2 col-sm-2 col-md-2 text-center">
    <table class="table-cv">
      <tbody>
        <tr>
          <td>
            <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px">
              {{ entry.year }}
            </span>
          </td>
        </tr>
      </tbody>
    </table>
  </div>

  <!-- Cột hiển thị thông tin bài báo -->
  <div class="col-xs-10 col-sm-10 col-md-10 mt-2 mt-md-0">
    {% if entry.url %}
      <h6 class="title font-weight-bold ml-1 ml-md-4">
        <a href="{{ entry.url }}">{{ entry.title }}</a>
      </h6>
    {% else %}
      <h6 class="title font-weight-bold ml-1 ml-md-4">{{ entry.title }}</h6>
    {% endif %}

    <!-- Phần xử lý Authors và In đậm tên bạn -->
    <h6 class="author ml-1 ml-md-4" style="font-size: 0.95rem;">
      {% assign authors = entry.author_array %}
      {% for author in authors %}
        {% assign author_name = author.first | append: ' ' | append: author.last %}
        {% assign author_name_rev = author.last | append: ', ' | append: author.first %}
        
        {% comment %} Kiểm tra các biến thể tên của bạn {% endcomment %}
        {% if author_name contains 'Dinh Dai Quan Tran' 
              or author_name contains 'Quan Tran'
              or author_name_rev contains 'Tran, Dinh Dai Quan'
              or author_name_rev contains 'Tran, Quan'
        %}
          <strong>{{ author.last }}, {{ author.first }}</strong>
        {% else %}
          {{ author.last }}, {{ author.first }}
        {% endif %}
        
        {% unless forloop.last %}, {% endunless %}
      {% endfor %}
    </h6>

    <!-- Hiển thị Nơi xuất bản (Journal/Conference) -->
    <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem">
      <em>
        {% if entry.type == "article" %}
          {{ entry.journal }}
        {% elsif entry.type == "inproceedings" %}
          {{ entry.booktitle }}
        {% else %}
          {{ entry.publisher }}
        {% endif %}
      </em>
    </h6>

    {% if entry.note %}
      <p class="ml-1 ml-md-4">{{ entry.note }}</p>
    {% endif %}
  </div>
</div>